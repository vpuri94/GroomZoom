<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvApptname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp"
        tools:text="Appointment with:" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/rbAppt"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Cost: " />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvApptname"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Date:" />

    <TextView
        android:id="@+id/RATING"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Their rating:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/SERVICES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services requested:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/ivProfilepic"
        android:layout_width="163dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.987"
        app:layout_constraintStart_toEndOf="@+id/tvPrice"
        tools:layout_editor_absoluteY="2dp"
        tools:srcCompat="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/rbAppt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        app:layout_constraintTop_toBottomOf="@+id/RATING"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>