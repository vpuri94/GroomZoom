<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="PLEASE ENTER YOUR RATING BELOW"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnPhone"
        tools:layout_editor_absoluteX="8dp" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/rbYourRating"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:layout_width="222dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:numStars="5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="6dp" />

    <TextView
        android:id="@+id/tvApptname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp"
        tools:text="Appointment with:" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/rbAppt"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Cost: " />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvApptname"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Date:" />

    <TextView
        android:id="@+id/RATING"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Their rating:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/SERVICES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services requested:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/ivProfilepic"
        android:layout_width="171dp"
        android:layout_height="227dp"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvDate"
        tools:layout_editor_absoluteY="3dp"
        tools:srcCompat="@tools:sample/avatars" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/rbAppt"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:layout_width="222dp"
        android:layout_height="37dp"
        android:layout_marginTop="4dp"
        android:clickable="false"
        android:numStars="5"
        android:isIndicator="true"
        app:layout_constraintTop_toBottomOf="@+id/RATING"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvServicesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/SERVICES"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Haircut" />

    <Button
        android:id="@+id/btnPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Message"
        app:layout_constraintTop_toBottomOf="@+id/tvServicesList"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/ivLeftPic"
        android:layout_width="143dp"
        android:layout_height="189dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="104dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfilepic"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Left Selfie"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLeftPic"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="41dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Right Selfie"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivRightPic"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/ivRightPic"
        android:layout_width="155dp"
        android:layout_height="192dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ivLeftPic"
        app:layout_constraintTop_toBottomOf="@+id/ivProfilepic"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>